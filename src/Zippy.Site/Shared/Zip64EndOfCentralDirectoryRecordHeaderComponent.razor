<div class="accordion-item">
    <h2 class="accordion-header" id="@("header_" + _htmlId)">
        <button class="accordion-button collapsed" type="button"
                data-bs-toggle="collapse"
                data-bs-target="@("#" + _htmlId)"
                aria-expanded="false"
                aria-controls="@_htmlId">
            @if (Zip64EndOfCentralDirectoryRecordHeader != null)
            {
                @:ZIP64 end of central directory record header
            }
        </button>
    </h2>
    <div id="@_htmlId" class="accordion-collapse collapse" aria-labelledby="@("header_" + _htmlId)">
        <div class="accordion-body">
            @if (Zip64EndOfCentralDirectoryRecordHeader != null)
            {
                <table class="table table-condensed table-striped table-hover table-bordered">
                    <thead>
                        <tr class="table-light">
                            <th>Property</th>
                            <th>Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Position first byte</td>
                            <td>@Zip64EndOfCentralDirectoryRecordHeader.PositionFirstByte</td>
                        </tr>
                        <tr>
                            <td>Length</td>
                            <td>@Zip64EndOfCentralDirectoryRecordHeader.Length</td>
                        </tr>
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

@code {
    private string _htmlId = $"zeocdr-{Guid.NewGuid()}";

    [Parameter]
    public Zip64EndOfCentralDirectoryRecordHeader? Zip64EndOfCentralDirectoryRecordHeader { get; set; }
}
